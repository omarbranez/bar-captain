<style>
img {
    width: 30%;
    height: auto;
    position: relative;
}
</style>
<body>
<img src="<%= @drink.photo_url %>" alt= <% @drink.name%>>

<h3><%= @drink.name %></h3>
<%= @drink.drink_type %><br>
Served in a: <%= @drink.glass %>
<h4>Recipe:</h4>
<% @drink_products.each do |dp| %>
    <% unless dp.product_id == 0 %>
    <li><%= dp.quantity %> <%= dp.product.name %></li>
    <% end %>
    <% end %>
<h4>Instructions:</h4>
<%= @drink.instructions %>

</body>